<Page
    x:Class="KoKoViewer.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KoKoViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:koko="using:KoKo"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Name="MainStackPanel">

            <TextBlock> </TextBlock>
            <AutoSuggestBox 
                VerticalAlignment="Center" 
                PlaceholderText="Tags..."
                HorizontalAlignment="Center"
                Name="SearchBox"
                QueryIcon="Find"
                Width="500"
                QuerySubmitted="Search_Click"/>

            <TextBlock> </TextBlock>
            <TextBlock>Rating:</TextBlock>
            <CheckBox IsChecked="True" Name="Safe">Safe</CheckBox>
            <CheckBox IsChecked="True" Name="Questionable">Questionable</CheckBox>
            <CheckBox IsChecked="True" Name="Explicit">Explicit</CheckBox>
            <CheckBox IsChecked="True" Name="Unknown">Unknown</CheckBox>

            <TextBlock> </TextBlock>
            <TextBlock>Sources:</TextBlock>

        </StackPanel>
    </ScrollViewer>
</Page>
